@using EntityLayer.Concrete
@model List<Portfolio>


<div class="section px-2 px-lg-4 pt-5" id="portfolio">
	<div class="container">
		<div class="text-center mb-5">
			<h2 class="marker marker-center">Projelerim </h2>
		</div>
		<div class="grid bp-gallery pb-3" data-aos="zoom-in-up" data-aos-delay="100">
			<div class="grid-sizer"></div>
			@foreach (var item in Model)
			{
				<div class="grid-item">
					<a href="@item.ProjectUrl">
						<figure class="portfolio-item">
							<img src="@item.ImageUrl1" data-bp="@item.ImageUrl2" target="_blank" />

							<figcaption>
								<h1 class="h1 mb-0; accordion-button">@item.Name</h1>
							</figcaption>

						</figure>
					</a>
				</div>
			}
		</div>
	</div>
</div>
